{% extends 'back.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>NOM</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>PRIX</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>QUANTITE</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>IMAGE</th>
                <td>{{ produit.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_showProduit') }}"><button class="btn btn-primary">{{ button_label|default('Back') }}</button></a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}"><button class="btn btn-primary">{{ button_label|default('Edit') }}</button></a>

    {{ include('produit/_delete_form.html.twig') }}
