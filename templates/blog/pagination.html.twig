{% if pageCount > 1 %}
    <div class="pagination-wrap">
        <ul class="pagination">
            <li><a href="{{ path(route, query|merge({(pageParameterName): 1})) }}"><i class="fa fa-chevron-left" aria-hidden="true"></i></a></li>
            {% for page in pagesInRange %}
                {% if page == current %}
                    <li class="active"><a href="#">{{ page }}</a></li>
                {% else %}
                    <li><a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a></li>
                {% endif %}
            {% endfor %}
            <li><a href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}"><i class="fa fa-chevron-right" aria-hidden="true"></i></a></li>
        </ul>
    </div>
{% endif %}